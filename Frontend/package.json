{
  "name": "open-hd-management-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:port": "node -e 'const fs=require(\"fs\"); const port=process.argv[2]||\"8080\"; fs.writeFileSync(\"src/assets/env.js\", `(function(w){w.env=w.env||{};w.env.BACKEND_PORT=\"${port}\"})(this);`); console.log(\"Backend port set to:\", port);' && ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:OpenHD-Management-Frontend": "node dist/open-hd-management-frontend/server/server.mjs",
    "sbom": "npx @cyclonedx/cyclonedx-npm --ignore-npm-errors --omit dev --spec-version 1.5 --output-format json --output-file sbom-frontend.json || true",
    "sbom:xml": "npx @cyclonedx/cyclonedx-npm --ignore-npm-errors --omit dev --spec-version 1.5 --output-format xml --output-file sbom-frontend.xml || true",
    "prestart": "node scripts/generate-build-info.js",
    "prestart:port": "node scripts/generate-build-info.js",
    "prebuild": "node scripts/generate-build-info.js",
    "prewatch": "node scripts/generate-build-info.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.3",
    "@angular/cdk": "20.2.7",
    "@angular/common": "^20.3.3",
    "@angular/compiler": "^20.3.3",
    "@angular/core": "^20.3.3",
    "@angular/forms": "^20.3.3",
    "@angular/material": "20.2.7",
    "@angular/platform-browser": "^20.3.3",
    "@angular/platform-browser-dynamic": "^20.3.3",
    "@angular/platform-server": "^20.3.3",
    "@angular/router": "^20.3.3",
    "@angular/ssr": "^20.3.6",
    "@apollo/client": "^3.13.9",
    "@nestjs/graphql": "13.0.3",
    "@ng-bootstrap/ng-bootstrap": "19.0.1",
    "@popperjs/core": "^2.11.8",
    "apollo-angular": "^11.0.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "1.11.3",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.3",
    "@angular/localize": "^20.3.3",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/typescript": "^4.1.5",
    "@graphql-codegen/typescript-apollo-angular": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.5.1",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.7",
    "@types/node": "^22.13.11",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.3",
    "@cyclonedx/cyclonedx-npm": "^4.0.3",
    "libxmljs2": "0.37.0"
  }
}
